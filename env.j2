# Watchtower Docker Compose Environment File (Template)

WATCHTOWER_HOSTNAME={{ watchtower_hostname | default("raspberrypi") }}

WATCHTOWER_NOTIFICATIONS={{ notifications | default("email") }}

WATCHTOWER_NOTIFICATION_EMAIL_FROM={{ email_from | default("watchtower@example.com") }}
WATCHTOWER_NOTIFICATION_EMAIL_TO={{ email_to | default("admin@example.com") }}
WATCHTOWER_NOTIFICATION_EMAIL_SERVER={{ email_server | default("smtp.example.com") }}
WATCHTOWER_NOTIFICATION_EMAIL_SERVER_PORT={{ email_port | default(587) }}
WATCHTOWER_NOTIFICATION_EMAIL_SERVER_USER={{ email_user | default("smtp-user") }}
WATCHTOWER_NOTIFICATION_EMAIL_SERVER_PASSWORD={{ email_pass | default("smtp-password") }}

WATCHTOWER_CLEANUP={{ cleanup | default("true") }}
WATCHTOWER_INCLUDE_RESTARTING={{ include_restarting | default("true") }}
WATCHTOWER_POLL_INTERVAL={{ poll_interval | default(86400) }}
